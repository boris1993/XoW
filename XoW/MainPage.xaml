<Page x:Class="XoW.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:local="using:XoW"
      xmlns:localServices="using:XoW.Services"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <localServices:ThreadPrevPageButtonEnableStateConverter x:Key="ThreadPrevPageButtonEnableStateConverter" />
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid x:Name="ContentGrid"
              HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--#region 左边串列表 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            x:Name="ThreadPageTopBar"
                            Grid.Column="0"
                            Grid.Row="0"
                            Margin="40, 0, 0, 0"
                            Background="LightGray"
                            BorderThickness="5, 5, 10, 5"
                            BorderBrush="LightGray"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            FlowDirection="LeftToRight">
                    <Button x:Name="ButtonThreadPrevPage"
                            Margin="5, 0, 5, 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            IsEnabled="False"
                            Click="{x:Bind OnThreadPrevPageButtonClicked}"
                            ToolTipService.ToolTip="{x:Bind local:TooltipContents.RefreshThreadButtonTooltipContent}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <muxc:NumberBox x:Name="ThreadPageNumberTextBox"
                                    Margin="0, 0, 5, 0"
                                    Minimum="1"
                                    ValidationMode="InvalidInputOverwritten"
                                    Value="{x:Bind _currentThreadPage.CurrentPage, Mode=TwoWay}" />
                    <Button x:Name="ButtonThreadNextPage"
                            Margin="0, 0, 5, 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Click="{x:Bind OnThreadNextPageButtonClicked}"
                            ToolTipService.ToolTip="{x:Bind local:TooltipContents.CreateThreadButtonTooltipContent}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            x:Name="ThreadTopBar"
                            Grid.Column="1"
                            Grid.Row="0"
                            Background="LightGray"
                            BorderThickness="5, 5, 10, 5"
                            BorderBrush="LightGray"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            FlowDirection="RightToLeft">
                    <Button x:Name="ButtonRefreshThread"
                            Margin="5, 0, 5, 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Click="{x:Bind OnRefreshThreadButtonClicked}"
                            ToolTipService.ToolTip="{x:Bind local:TooltipContents.RefreshThreadButtonTooltipContent}">
                        <SymbolIcon Symbol="Refresh" />
                    </Button>
                    <Button x:Name="ButtonCreateThread"
                            Margin="0, 0, 5, 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            IsEnabled="False"
                            ToolTipService.ToolTip="{x:Bind local:TooltipContents.CreateThreadButtonTooltipContent}">
                        <SymbolIcon Symbol="Edit" />
                    </Button>
                </StackPanel>
            </Grid>

            <ListView x:Name="ThreadsListView"
                      Grid.Column="0"
                      Grid.Row="1"
                      SelectionMode="Single"
                      BorderBrush="LightGray"
                      BorderThickness="10, 0, 10, 10"
                      HorizontalAlignment="Stretch"
                      Width="Auto"
                      Margin="40, 0, 0, 0"
                      IsItemClickEnabled="True"
                      DataFetchSize="1"
                      ItemClick="{x:Bind OnThreadClicked}">
            </ListView>
            <!--#endregion-->

            <!--#region 右边回复列表 -->
            <StackPanel Orientation="Horizontal"
                        x:Name="ReplyTopBar"
                        Grid.Column="1"
                        Grid.Row="0"
                        Background="LightGray"
                        BorderThickness="5, 5, 10, 5"
                        BorderBrush="LightGray"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FlowDirection="RightToLeft"
                        Visibility="Collapsed">
                <Button x:Name="ButtonRefreshReplies"
                        Margin="5, 0, 5, 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        Click="{x:Bind OnRefreshRepliesButtonClicked}"
                        ToolTipService.ToolTip="{x:Bind local:TooltipContents.RefreshThreadButtonTooltipContent}">
                    <SymbolIcon Symbol="Refresh" />
                </Button>
                <Button x:Name="ButtonCreateReply"
                        Margin="0, 0, 5, 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="{x:Bind local:TooltipContents.CreateReplyButtonTooltipContent}">
                    <SymbolIcon Symbol="Edit" />
                </Button>
                <Button x:Name="ButtonAddToFavourites"
                        Margin="0, 0, 5, 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="{x:Bind local:TooltipContents.AddToFavouritesButtonTooltipContent}">
                    <SymbolIcon Symbol="Favorite" />
                </Button>
            </StackPanel>
            
            <ListView x:Name="Replies"
                      Grid.Column="1"
                      Grid.Row="1"
                      SelectionMode="None"
                      BorderBrush="LightGray"
                      BorderThickness="0, 0, 10, 10"
                      HorizontalAlignment="Stretch"
                      Width="Auto"
                      Visibility="Collapsed">
            </ListView>
            <!--#endregion-->
        </Grid>

        <ProgressBar x:Name="MainPageProgressBar"
                     IsIndeterminate="True"
                     VerticalAlignment="Top" />

        <NavigationView Name="ForumListNavigation"
                        PaneTitle="{x:Bind local:Constants.ForumName, Mode=OneTime}"
                        PaneDisplayMode="LeftCompact"
                        IsBackButtonVisible="Collapsed"
                        ItemInvoked="NavigationItemInvokedAsync"
                        MenuItemsSource="{x:Bind _navigationItems, Mode=OneWay}"
                        Grid.ColumnSpan="2" />
    </Grid>
</Page>
